<div class="dropdown pull-right">
  <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">排序
  <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li><%= link_to("按薪资下限排序", jobs_path(:order => "by_lower_bound")) %></li>
    <li><%= link_to("按薪资上限排序", jobs_path(:order => "by_upper_bound")) %></li>
    <li><%= link_to("按发表时间排序", jobs_path ) %></li>
  </ul>
</div>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%= link_to("Edit", edit_job_path(job)) %> |
      <%= link_to("Destroy", job_path(job), :method => :delete, :data => { confirm: "Are you sure?"}) %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
